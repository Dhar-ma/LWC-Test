<apex:page standardController="Opportunity" showHeader="false" sidebar="false" applyHtmlTag="false" applyBodyTag="false">
    <html>
        <head>
            <style>
                .container {
                    max-width: 600px;
                    margin: 0 auto;
                    font-family: Arial, sans-serif;
                }
                .header {
                    text-align: center;
                    font-size: 24px;
                    font-weight: bold;
                    margin-bottom: 20px;
                }
                .section {
                    margin-bottom: 20px;
                }
                .section label {
                    font-weight: bold;
                    display: inline-block;
                    width: 150px;
                    margin-right: 10px;
                }
                .section span {
                    display: inline-block;
                    width: 400px;
                }
                .footer {
                    text-align: center;
                    font-style: italic;
                    font-size: 12px;
                    margin-top: 50px;
                }
                .Message {
                    
                }
            </style>
        </head>
        <body>
            <div class="container">
                <div class="header">Donation Receipt</div>
                <div class="section">
                    <label>Donor Name:</label>
                    <span>{!Opportunity.Name}</span>
                </div>
                <div class="section">
                    <label>Donor Owner:</label>
                    <span>{!Opportunity.Owner.Name}</span>
                </div>
                <div class="section">
                    <label>Donation Amount:</label>
                    <span>{!Opportunity.Amount}</span>
                </div>
                <div class="section">
                    <label>Date of Donation:</label>
                    <span>{!Opportunity.CreatedDate}</span>
                </div>
                <div class="section">
                    <label>Message:</label>
                    <span>Thank you for your generous donation of {!Opportunity.Amount}. Your contribution will help us support our mission of.</span>
                </div>
                 <div class="Message">Thank you for your generous donation of ${!Opportunity.Amount}. Your support is greatly appreciated.
Please keep this receipt for your tax records.</div>
                <div class="footer">Thank you for your support.</div>

               
            </div>
        </body>
    </html>
</apex:page>